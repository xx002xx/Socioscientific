<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/konten_materi"
    tools:context=".Materi">


    <ImageView
        android:id="@+id/isu"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/isu_soss"
        />


    <ImageView
        android:layout_below="@+id/isu"
        android:src="@drawable/mat_pendd"
        android:id="@+id/materi_isu"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:drawableStart="@drawable/home_playslist"
        android:id="@+id/txthome"
        />

</RelativeLayout>