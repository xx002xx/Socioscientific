<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_isu_new"
    tools:context=".Isu_sos">

    <ImageView
        android:id="@+id/img_co"
        android:layout_marginTop="240dp"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/img_dil_co"/>

    <ImageView
        android:id="@+id/img_pro"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_below="@+id/img_co"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/img_dil_pro" />

    <ImageView
        android:id="@+id/img_plas"
        android:layout_below="@+id/img_pro"
        android:layout_marginTop="5dp"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/img_dil_plas"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:drawableStart="@drawable/home_playslist"
        android:id="@+id/txthome"
        />

</RelativeLayout>